{
	"compilerOptions": {
		"target": "es2016",
		"jsx": "react-jsx",
		"module": "ES6",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"outDir": "./dist/test",
		"removeComments": false,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"paths": {
			"@components": ["./components"],
			"*": ["./utils/*"]
		}
	},
	"include": ["src/**/*"]
}
